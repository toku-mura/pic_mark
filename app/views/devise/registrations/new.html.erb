<div class="container" style="margin-top:30px;">
    <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">新規会員登録</h3>
                </div>
                <div class="panel-body">
                    

                      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                       <%= devise_error_messages! %>

                        <div class="form-group field">
                          <%= f.label :ニックネーム %><br />
                          <%= f.text_field :nickname, autofocus: true, class:"form-control input-sm", placeholder:"ニックネーム" %>
                        </div>

                        <div class="form-group field">
                          <%= f.label :email %><br />
                          <%= f.email_field :email, autofocus: true, class:"form-control input-sm", placeholder:"email" %>
                        </div>

                        <div class="form-group field">
                          <%= f.label :password %>
                          <% if @minimum_password_length %>
                          <em>(<%= @minimum_password_length %> 文字以上※半角英数字)</em>
                          <% end %><br />
                          <%= f.password_field :password, autocomplete: "off", class:"form-control input-sm", placeholder:"パスワード" %>
                        </div>

                        <div class="form-group field">
                          <%= f.label :password_confirmation %><br />
                          <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control input-sm", placeholder:"再入力" %>
                        </div>
                        <div class="actions">
                          <%= f.submit "会員登録", class:"btn btn-info btn-block" %>
                        </div>
                  
                  <% end %>
                  <div style="margin-top: 5px;">
                  <%= render "devise/shared/links" %>
                  </div>
                </div>
            </div>
        </div>
    </div>
</div>